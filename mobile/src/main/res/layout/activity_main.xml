<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/allowedSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="increaseAllowedSpeed"
            android:text="0"
            android:textAlignment="center"
            android:textSize="40pt"
            tools:text="80" />

        <TextView
            android:id="@+id/actualSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="increaseActualSpeed"
            android:text="0"
            android:textAlignment="center"
            android:textSize="40pt"
            tools:text="111" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="decreaseAllowedSpeed"
            android:text="0"
            android:textAlignment="center"
            android:textSize="30pt"
            tools:text="120" />

        <TextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="matchActualSpeedWithAllowedSpeed"
            android:text="0"
            android:textAlignment="center"
            android:textSize="30pt"
            tools:text="1" />

        <TextView
            android:id="@+id/revocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="decreaseActualSpeed"
            android:text="0"
            android:textAlignment="center"
            android:textSize="30pt"
            tools:text="(1)" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/inCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="toggleCity"
            android:text="Innerorts"
            android:textAlignment="center"
            android:textSize="12pt"
            tools:text="AuÃŸerorts" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="pushStatus"
            android:text="Einstellungen"
            android:textAlignment="center"
            android:textSize="12pt" />

    </LinearLayout>

</LinearLayout>
